.menu{
  font-size: 12px;
  color: #666;
}
.tag{
	display: inline-block;
	width: 18px;
	height: 18px;
	text-align: center;
	line-height: 18px;
	color: #fff;
	background: #ccc;
	font-size: 12px;
	border-radius: 2px;
  margin-right: 5px;
}
.tag-cur{
	background: #fc9a30;
}
.avator{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin:20px auto;
  border: 1px solid #333;
}
input{
  border: 1px solid #ccc;
  padding: 5px;
  margin-bottom: 10px;
  width: 85%;
  vertical-align:middle;
  display: inline-block;
}
textarea{
  border: 1px solid #ccc;
  padding: 5px;
}
.top_space{
  margin-top: 10px;
}
.send_btn{
  display: flex;
}
button{
  background: #fff;
  font-size: 14px;
  padding: 5px 2px;
  line-height: normal;
  border: 1px solid #ccc;
}
.del_btn{
  width:18px;
  height:18px; 
  display:inline-block;
  margin-left: 10px;
}
.add_btn{
  width:18px;
  height:18px; 
  display:inline-block;
  vertical-align:top;
  margin-right:5px;
}